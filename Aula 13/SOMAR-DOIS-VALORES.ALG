algoritmo "somar-dois-valores"
var
   x, y, res: inteiro
funcao soma (a, b: inteiro): inteiro
inicio
      Retorne a + b
fimfuncao
inicio
      Escreva ("Digite o 1o. número: ")
      Leia (x)
      Escreva ("Digite 2o. número: ")
      Leia (y)
      res <- soma (x,y)
      Escreva ("A soma é: ", res)
fimalgoritmo