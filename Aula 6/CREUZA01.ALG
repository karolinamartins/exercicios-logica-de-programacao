algoritmo "creuza01"
var
   ano_atual: inteiro
   ano_nasc: inteiro
   idade: inteiro
inicio
      Escreva ("Em que ano estamos? ")
      Leia (ano_atual)
      Escreva ("Em que ano eu nasci? ")
      Leia (ano_nasc)
      idade <- ano_atual - ano_nasc
      Escreva ("Hmmm... então minha idade é ", idade, ".")
fimalgoritmo